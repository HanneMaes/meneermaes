source "https://rubygems.org"
ruby "2.7.1"

gem "jekyll", "~> 4.3.3" # specify that we want to use Jekyll version 4.2.0 or any higher patch version (but not 4.3.0 or higher).
                         # the ~> is called the "pessimistic version constraint". It allows for the same minor version but any higher patch version
